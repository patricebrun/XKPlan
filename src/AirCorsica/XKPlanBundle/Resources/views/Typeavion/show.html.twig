{% extends 'AirCorsicaXKPlanBundle::layout.html.twig' %}

{% block stylesheets %}
    {% stylesheets
    filter='cssrewrite'
    'bundles/aircorsicaxkplan/assets/admin-tools/admin-forms/less/admin-forms.less'
    filter='less'
    output='css/compiled/admin-forms.css'
    %}

    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />

    {% endstylesheets %}
{% endblock %}

{% block title %}
    {% set titre = 'Type Avion' %}
    {{ titre }} - {{ parent() }}
{% endblock %}

{% block body_class %}
    {% set attributes = 'admin-elements-page' %}
    {{ attributes }}
{% endblock %}

{% block titre_contenu %}
    {% set titre_contenu = 'Type Avion' %}
    {{ titre_contenu }}
{% endblock %}

{% block btn_actions %}
    <div class="topbar-right">
        <div class="ib topbar-dropdown">
            <a href="{{ path('typeavion_index') }}" class="btn btn-success btn-gradient dark btn-block"><i class="glyphicon glyphicon-circle-arrow-left"></i> Retour</a>
        </div>
    </div>
{% endblock %}

{% block body %}

    {#{ dump(edit_form) }#}
    <!-- Begin: Content -->
    <div id="content" class="animated fadeIn">
        <div class="row">

            <div class="theme-primary mw1000 center-block">
                <div class="form-horizontal">
                    <!-- Input Fields -->
                    <div class="panel">
                        <div class="panel-heading">
                            <span class="panel-icon">
                              <i class="glyphicon glyphicon-edit"></i>
                            </span>
                            <span class="panel-title">Consultation Type Avion</span>
                        </div>
                        <div class="panel-body">
                            <div class="form-group">
                                <label class="col-lg-3 control-label">Id</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="typeAvion_id" name="typeAvion_id" class="form-control" value="{{ typeAvion.id }}" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-3 control-label">Version</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="typeAvion_version" name="typeAvion_version" class="form-control" value="{{ typeAvion.version }}" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-3 control-label">Code IATA</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="typeAvion_codeIATA" name="typeAvion_codeIATA" class="form-control" value="{{ typeAvion.codeIATA }}" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-3 control-label">Code OACI</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="typeAvion_codeOACI" name="typeAvion_codeOACI" class="form-control" value="{{ typeAvion.codeOACI }}" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-3 control-label">Capacité siège</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="typeAvion_capaciteSiege" name="typeAvion_capaciteSiege" class="form-control" value="{{ typeAvion.capaciteSiege }}" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-3 control-label">Temps de demi-tour</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="typeAvion_tempsDemiTour" name="typeAvion_tempsDemiTour" class="form-control" value="{{ typeAvion.tempsDemiTour }}" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-3 control-label">Date modification</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="typeAvion_dateTimeModification" name="typeAvion_dateTimeModification" class="form-control" value="{% if typeAvion.dateTimeModification %}{{ typeAvion.dateTimeModification|date('Y-m-d H:i:s') }}{% endif %}" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-3 control-label">Date création</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="typeAvion_dateTimeCreation" name="typeAvion_dateTimeCreation" class="form-control" value="{% if typeAvion.dateTimeCreation %}{{ typeAvion.dateTimeCreation|date('Y-m-d H:i:s') }}{% endif %}" disabled>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End: Content -->

    {% include("@AirCorsicaXKPlan/Periodesaison/formModalCreate.html.twig") %}

{% endblock %}
