{% extends 'AirCorsicaXKPlanBundle::layout.html.twig' %}

{% block stylesheets %}
    {% stylesheets
    filter='cssrewrite'
    'bundles/aircorsicaxkplan/assets/admin-tools/admin-forms/less/admin-forms.less'
    filter='less'
    output='css/compiled/admin-forms.css'
    %}

    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />

    {% endstylesheets %}
    {% stylesheets
    filter='cssrewrite'
    'bundles/aircorsicaxkplan/vendor/plugins/select2-4.0.3/css/select2.css'
    output='css/compiled/core.css'
    %}

    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />

    {% endstylesheets %}
{% endblock %}

{% block title %}
    {% set titre = 'Ligne' %}
    {{ titre }} - {{ parent() }}
{% endblock %}

{% block body_class %}
    {% set attributes = 'admin-elements-page' %}
    {{ attributes }}
{% endblock %}

{% block titre_contenu %}
    {% set titre_contenu = 'Ligne' %}
    {{ titre_contenu }}
{% endblock %}

{% block btn_actions %}
    <div class="topbar-right">
        <div class="ib topbar-dropdown">
            <a href="{{ path('ligne_index') }}" class="btn btn-success btn-gradient dark btn-block"><i class="glyphicon glyphicon-circle-arrow-left"></i> Retour</a>
        </div>
    </div>
{% endblock %}

{% block body %}

    {#{ dump(edit_form) }#}
    <!-- Begin: Content -->
    <div id="content" class="animated fadeIn">
        <div class="row">

            <div class="theme-primary mw1000 center-block">
                <div class="form-horizontal">
                    <!-- Input Fields -->
                    <div class="panel">
                        <div class="panel-heading">
                            <span class="panel-icon">
                              <i class="glyphicon glyphicon-edit"></i>
                            </span>
                            <span class="panel-title">Consultation Ligne</span>
                        </div>
                        <div class="panel-body">
                            <div class="form-group">
                                <label class="col-lg-4 control-label">Id</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="ligne_id" name="ligne_id" class="form-control" value="{{ ligne.id }}" disabled>
                                    </div>
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="col-lg-4 control-label">Aéroport Départ</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="ligne_aeroportDepart" name="ligne_aeroportDepart" class="form-control" value="{{ ligne.aeroportDepart.codeIATA }}" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-4 control-label">Aéroport Arrivée</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="ligne_aeroportArrivee" name="ligne_aeroportArrivee" class="form-control" value="{{ ligne.aeroportArrivee.codeIATA }}" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-4 control-label">Natures de vol</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <select class="form-control select2-multiple" name="ligne_naturesDeVol[]" id="ligne_naturesDeVol[]" data-placeholder="Selectionner Natures de vol" multiple disabled>
                                            <option value=""></option>
                                            {% for naturesDeVol in ligne.naturesDeVol %}
                                                {{ naturesDeVol.nom }}
                                                <option value="{{ naturesDeVol.id }}" selected="selected">{{ naturesDeVol.nom }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-4 control-label">Date modification</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="ligne_dateTimeModification" name="ligne_dateTimeModification" class="form-control" value="{% if ligne.dateTimeModification %}{{ ligne.dateTimeModification|date('Y-m-d H:i:s') }}{% endif %}" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-4 control-label">Date création</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="ligne_dateTimeCreation" name="ligne_dateTimeCreation" class="form-control" value="{% if ligne.dateTimeCreation %}{{ ligne.dateTimeCreation|date('Y-m-d H:i:s') }}{% endif %}" disabled>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End: Content -->

{% endblock %}

{% block jquery_custom %}
    // Init Select2
    $(".select2-single").select2({
    language: "fr"
    });

    // Init Select2 - Basic Multiple
    $(".select2-multiple").select2({
    language: "fr"
    });
{% endblock %}

{% block javascripts_libs %}
    <!-- Theme Javascript LIBS -->
    {% javascripts
    'bundles/aircorsicaxkplan/vendor/plugins/select2-4.0.3/js/select2.full.js'
    'bundles/aircorsicaxkplan/vendor/plugins/select2-4.0.3/js/i18n/fr.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}