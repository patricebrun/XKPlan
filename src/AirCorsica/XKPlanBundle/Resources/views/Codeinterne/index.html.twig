{% extends 'AirCorsicaXKPlanBundle::layout.html.twig' %}

{% block stylesheets %}

    {% stylesheets
    filter='cssrewrite'
    'bundles/aircorsicaxkplan/assets/admin-tools/admin-forms/less/admin-forms.less'
    filter='less'
    %}

    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />

    {% endstylesheets %}
{% endblock %}

{% block title %}
    {% set titre = 'Codes Internes et Codes Shares' %}
    {{ titre }} - {{ parent() }}
{% endblock %}

{% block body_class %}
    {% set attributes = 'admin-elements-page' %}
    {{ attributes }}
{% endblock %}

{% block titre_contenu %}
    {% set titre_contenu = 'Codes Internes et Codes Shares' %}
    {{ titre_contenu }}
{% endblock %}

{% block btn_actions %}
    <div class="topbar-right">
        <div class="ib topbar-dropdown">
            <a id="add-group-sita" href="{{ path('codeinterne_new') }}" class="btn btn-success btn-gradient dark btn-block"><i class="glyphicon glyphicon-plus"></i> Ajouter Code Interne</a>
        </div>
    </div>
{% endblock %}

{% block body %}
    <!-- Begin: Content -->
    <div id="content" class="animated fadeIn">
        <div class="row">
            <!-- Begin: Content -->
            <div class="col-md-12">
                <div class="panel">

                    <div class="panel-heading">
                        <span class="panel-icon">
                            <i class="glyphicon glyphicon-list"></i>
                        </span>
                        <span class="panel-title">Codes Internes et Codes Shares</span>

                        <div class="panel-controls">
                            <div class="pull-right">
                                <a id="exportCodeShareToCsv" href="{{ path('codeinterne_codessharecsv') }}" class="btn btn-default" role="button">CSV</a>
                                <a id="expandAll" href="#" class="btn btn-default" role="button">Ouvrir Tout</a>
                                <a id="collapseAll" href="#" class="btn btn-default" role="button">Fermer Tout</a>
                            </div>
                        </div>
                    </div>

                    <div class="panel-body">
                        {% for codeInterne in codeInternes %}
                            {% include "AirCorsicaXKPlanBundle:Codeinterne:details.html.twig" %}
                        {% endfor %}
                    </div>
                </div>
            </div>


        </div>
    </div>

{% endblock %}

{% block javascripts_libs %}

{% endblock %}

{% block jquery_custom %}

{% endblock %}

{% block javascripts_custom %}
    {{ parent() }}
{% endblock %}
