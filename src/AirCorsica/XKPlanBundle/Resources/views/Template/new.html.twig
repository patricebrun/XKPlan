{% extends 'AirCorsicaXKPlanBundle::layout.html.twig' %}

{% block stylesheets %}
    {% stylesheets
    filter='cssrewrite'
    'bundles/aircorsicaxkplan/assets/admin-tools/admin-forms/less/admin-forms.less'
    filter='less'
    output='css/compiled/admin-forms.css'
    %}

    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />

    {% endstylesheets %}
    {% stylesheets
    filter='cssrewrite'
    'bundles/aircorsicaxkplan/vendor/plugins/select2-4.0.3/css/select2.css'
    output='css/compiled/core.css'
    %}

    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />

    {% endstylesheets %}
{% endblock %}

{% block title %}
    {% set titre = 'Template' %}
    {{ titre }} - {{ parent() }}
{% endblock %}

{% block body_class %}
    {% set attributes = 'admin-elements-page' %}
    {{ attributes }}
{% endblock %}

{% block titre_contenu %}
    {% set titre_contenu = 'Template' %}
    {{ titre_contenu }}
{% endblock %}


{% set template_id = app.request.session.get("template") %}

{% block btn_actions %}
    <div class="topbar-right">
        <div class="ib topbar-dropdown">
            <a href="{{ path('template_index') }}?id={{ template_id }}" class="btn btn-success btn-gradient dark btn-block"><i class="glyphicon glyphicon-circle-arrow-left"></i> Retour</a>
        </div>
    </div>
{% endblock %}


{% block body %}

    <!-- Begin: Content -->
    <div id="content" class="animated fadeIn">
        <div class="row">

            <div class="theme-primary mw1000 center-block">

                <!-- Input Fields -->
                <div class="panel">
                    {{ form_start(form) }}

                    <div class="panel-heading">
                            <span class="panel-icon">
                              <i class="glyphicon glyphicon-plus"></i>
                            </span>
                        <span class="panel-title">Création template</span>
                    </div>
                    <div class="panel-body">


                        {% if not form.vars.valid %}
                            <div class="alert alert-danger alert-dismissable">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <i class="fa fa-bug pr10"></i><!--<i class="fa fa-remove pr10"></i>-->
                                {{ form_errors(form) }}
                            </div>
                        {% endif %}

                        {{ form_widget(form) }}

                    </div>
                    <div class="panel-footer text-right">
                        <button type="submit" class="btn-default btn">Ajouter</button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    <!-- End: Content -->

{% endblock %}


