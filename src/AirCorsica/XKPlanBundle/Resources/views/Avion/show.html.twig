{% extends 'AirCorsicaXKPlanBundle::layout.html.twig' %}

{% block stylesheets %}
    {% stylesheets
    filter='cssrewrite'
    'bundles/aircorsicaxkplan/assets/admin-tools/admin-forms/less/admin-forms.less'
    filter='less'
    output='css/compiled/admin-forms.css'
    %}

    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />

    {% endstylesheets %}
{% endblock %}

{% block title %}
    {% set titre = 'Avion' %}
    {{ titre }} - {{ parent() }}
{% endblock %}

{% block body_class %}
    {% set attributes = 'admin-elements-page' %}
    {{ attributes }}
{% endblock %}

{% block titre_contenu %}
    {% set titre_contenu = 'Avion' %}
    {{ titre_contenu }}
{% endblock %}

{% block btn_actions %}
    <div class="topbar-right">
        <div class="ib topbar-dropdown">
            <a href="{{ path('avion_index') }}" class="btn btn-success btn-gradient dark btn-block"><i class="glyphicon glyphicon-circle-arrow-left"></i> Retour</a>
        </div>
    </div>
{% endblock %}

{% block body %}

    {#{ dump(edit_form) }#}
    <!-- Begin: Content -->
    <div id="content" class="animated fadeIn">
        <div class="row">

            <div class="theme-primary mw1000 center-block">
                <div class="form-horizontal">
                    <!-- Input Fields -->
                    <div class="panel">
                        <div class="panel-heading">
                            <span class="panel-icon">
                              <i class="glyphicon glyphicon-edit"></i>
                            </span>
                            <span class="panel-title">Consultation Avion</span>
                        </div>
                        <div class="panel-body">
                            <div class="form-group">
                                <label class="col-lg-3 control-label">Id</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="avion_id" name="avion_id" class="form-control" value="{{ avion.id }}" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-3 control-label">Nom</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="avion_nom" name="avion_nom" class="form-control" value="{{ avion.nom }}" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-3 control-label">Type Avion</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="avion_typeAvion" name="avion_typeAvion" class="form-control" value="{{ avion.typeAvion.codeIATA }} => {{ avion.typeAvion.version }}" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-3 control-label">Compagnie</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="avion_compagnie" name="avion_compagnie" class="form-control" value="{{ avion.compagnie.nom }}" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-3 control-label">Affrètement</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="avion_affrete" name="avion_affrete" class="form-control" value="{% if avion.affrete %}Oui{% else %}Non{% endif %}" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-3 control-label">Ordre</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="avion_ordre" name="avion_ordre" class="form-control" value="{{ avion.ordre }}" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-3 control-label">Date modification</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="avion_dateTimeModification" name="avion_dateTimeModification" class="form-control" value="{% if avion.dateTimeModification %}{{ avion.dateTimeModification|date('Y-m-d H:i:s') }}{% endif %}" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-3 control-label">Date création</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="avion_dateTimeCreation" name="avion_dateTimeCreation" class="form-control" value="{% if avion.dateTimeCreation %}{{ avion.dateTimeCreation|date('Y-m-d H:i:s') }}{% endif %}" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-3 control-label">
                                    Périodes d'immobilisation
                                </div>
                                <div class="col-lg-8">
                                    <table class="table table-striped table-hover admin-form tc-checkbox-1 fs13 datatable" id="datatable" cellspacing="0" width="100%">
                                        <tr>
                                            <th class="text-center"> DU </th>
                                            <th class="text-center"> AU </th>
                                        </tr>
                                        {% for immo in avion.periodesImmobilsation %}
                                            <tr>
                                                <td class="text-center">
                                                    <div class="bs-component">
                                                        {{ immo.dateDebut|date('d-m-Y') }}
                                                    </div>
                                                </td>

                                                <td class="text-center">
                                                    <div class="bs-component">
                                                        {{ immo.dateFin|date('d-m-Y') }}
                                                    </div>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End: Content -->

{% endblock %}
