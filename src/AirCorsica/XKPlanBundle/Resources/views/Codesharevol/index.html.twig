{% extends 'AirCorsicaXKPlanBundle::layout.html.twig' %}

{% block body %}
    <h1>Codesharevols list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Datetimemodification</th>
                <th>Datetimecreation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for codeShareVol in codeShareVols %}
            <tr>
                <td>{{ codeShareVol.id }}</td>
                <td>{% if codeShareVol.dateTimeModification %}{{ codeShareVol.dateTimeModification|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if codeShareVol.dateTimeCreation %}{{ codeShareVol.dateTimeCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('codesharevol_edit', { 'id': codeShareVol.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('codesharevol_new') }}">Create a new codeShareVol</a>
        </li>
    </ul>
{% endblock %}
