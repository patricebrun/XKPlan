{% extends 'AirCorsicaXKPlanBundle::layout.html.twig' %}

{% block stylesheets %}
    {% stylesheets
    filter='cssrewrite'
    'bundles/aircorsicaxkplan/assets/admin-tools/admin-forms/less/admin-forms.less'
    filter='less'
    output='css/compiled/admin-forms.css'
    %}

    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />

    {% endstylesheets %}
{% endblock %}

{% block title %}
    {% set titre = 'Compagnie' %}
    {{ titre }} - {{ parent() }}
{% endblock %}

{% block body_class %}
    {% set attributes = 'admin-elements-page' %}
    {{ attributes }}
{% endblock %}

{% block titre_contenu %}
    {% set titre_contenu = 'Compagnie' %}
    {{ titre_contenu }}
{% endblock %}

{% block btn_actions %}
    <div class="topbar-right">
        <div class="ib topbar-dropdown">
            <a href="{{ path('compagnie_index') }}" class="btn btn-success btn-gradient dark btn-block"><i class="glyphicon glyphicon-circle-arrow-left"></i> Retour</a>
        </div>
    </div>
{% endblock %}

{% block body %}

    {#{ dump(edit_form) }#}
    <!-- Begin: Content -->
    <div id="content" class="animated fadeIn">
        <div class="row">

            <div class="theme-primary mw1000 center-block">
                <div class="form-horizontal">
                    <!-- Input Fields -->
                    <div class="panel">
                        <div class="panel-heading">
                            <span class="panel-icon">
                              <i class="glyphicon glyphicon-edit"></i>
                            </span>
                            <span class="panel-title">Consultation Compagnie</span>
                        </div>
                        <div class="panel-body">
                            <div class="form-group">
                                <label class="col-lg-3 control-label">Id</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="compagnie_id" name="compagnie_id" class="form-control" value="{{ compagnie.id }}" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-3 control-label">Nom</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="compagnie_nom" name="compagnie_nom" class="form-control" value="{{ compagnie.nom }}" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-3 control-label">Code IATA</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="compagnie_codeIATA" name="compagnie_codeIATA" class="form-control" value="{{ compagnie.codeIATA }}" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-3 control-label">Code Alternatif</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="compagnie_codeAlternatif" name="compagnie_codeAlternatif" class="form-control" value="{{ compagnie.codeAlternatif }}" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-3 control-label">Code OACI</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="compagnie_codeOACI" name="compagnie_codeOACI" class="form-control" value="{{ compagnie.codeOACI }}" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-3 control-label">Date modification</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="compagnie_dateTimeModification" name="compagnie_dateTimeModification" class="form-control" value="{% if compagnie.dateTimeModification %}{{ compagnie.dateTimeModification|date('Y-m-d H:i:s') }}{% endif %}" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-3 control-label">Date cr√©ation</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="compagnie_dateTimeCreation" name="compagnie_dateTimeCreation" class="form-control" value="{% if compagnie.dateTimeCreation %}{{ compagnie.dateTimeCreation|date('Y-m-d H:i:s') }}{% endif %}" disabled>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End: Content -->

{% endblock %}