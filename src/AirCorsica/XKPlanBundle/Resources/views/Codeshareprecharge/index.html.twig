{% extends 'AirCorsicaXKPlanBundle::layout.html.twig' %}

{% block stylesheets %}
    {% stylesheets
    filter='cssrewrite'
    'bundles/aircorsicaxkplan/vendor/plugins/datatables/media/css/dataTables.bootstrap.css'
    output='css/compiled/datatable.css'
    %}

    <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />

    {% endstylesheets %}
{% endblock %}

{% block title %}
    {% set titre = 'Code Shares Préchargé' %}
    {{ titre }} - {{ parent() }}
{% endblock %}

{% block body_class %}
    {% set attributes = 'datatables-page' %}
    {{ attributes }}
{% endblock %}

{% block titre_contenu %}
    {% set titre_contenu = 'Code Shares Préchargé' %}
    {{ titre_contenu }}
{% endblock %}

{% block btn_actions %}
    <div class="topbar-right">
        <div class="ib topbar-dropdown">
            <a href="{{ path('codeshareprecharge_new') }}" class="btn btn-success btn-gradient dark btn-block"><i class="glyphicon glyphicon-plus"></i> Ajouter</a>
        </div>

        <div class="ib topbar-dropdown">
            <a href="{{ path('codeshareprecharge_import') }}" class="btn btn-primary btn-gradient dark btn-block"><i class="glyphicon glyphicon-upload"></i> Importer</a>
        </div>

        <div class="ib topbar-dropdown">
            <a href="{{ path('codeinterne_index') }}" class="btn btn-dark btn-gradient dark btn-block"><i class="glyphicon glyphicon-list"></i> Codes Interne</a>
        </div>
    </div>
{% endblock %}


{% block body %}
    <!-- Begin: Content -->
    <div id="content" class="animated fadeIn">
        <div class="row">
            <div class="panel panel-visible">
                <div class="panel-heading">
                    <span class="panel-icon">
                      <i class="glyphicon glyphicon-tasks"></i>
                    </span>
                    <span class="panel-title">Listing Codes Shares Préchargés</span>
                </div>
                <div class="panel-body pn">
                    <!--<table class="table admin-form theme-warning tc-checkbox-1 fs13 datatable" id="datatable" cellspacing="0" width="100%">-->
                    <table class="table table-striped table-hover admin-form tc-checkbox-1 fs13 datatable" id="datatable" cellspacing="0" width="100%">

                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Libelle</th>
                            <th>Code Interne</th>
                            <th class="no-sort">Modifier</th>
                            <th class="no-sort">Supprimer</th>
                            <!--<th>Ordre</th>
                            <th>Datetimemodification</th>
                            <th>Datetimecreation</th>-->
                        </tr>
                        </thead>
                        <tbody>

                        {% for codeSharePrecharge in codeSharePrecharges %}
                            <tr>
                                <td>{{ codeSharePrecharge.id }}</td>
                                <td>{{ codeSharePrecharge.libelle }}</td>
                                <td>{{ codeSharePrecharge.codeInterne }}</td>
                                <!--<td>{#% if codeSharePrecharge.dateTimeModification %}{{ codeSharePrecharge.dateTimeModification|date('Y-m-d H:i:s') }}{% endif %}</td>
                                <td>{% if codeSharePrecharge.dateTimeCreation %}{{ codeSharePrecharge.dateTimeCreation|date('Y-m-d H:i:s') }}{% endif %#}</td>-->
                                <td>
                                    <div class="btn-group">
                                        <a href="{{ path('codeshareprecharge_edit', { 'id': codeSharePrecharge.id }) }}" class="btn btn-lg btn-warning">
                                            <i class="glyphicon glyphicon-edit"></i>
                                        </a>
                                    </div>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="{{ path('codeshareprecharge_delete', { 'id': codeSharePrecharge.id }) }}" class="btn btn-lg btn-danger confirm">
                                            <i class="glyphicon glyphicon-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- End: Content -->
{% endblock %}

{% block javascripts_libs %}
    <!-- Theme Javascript LIBS -->
    {% javascripts
    'bundles/aircorsicaxkplan/vendor/plugins/datatables/media/js/jquery.dataTables.js'
    'bundles/aircorsicaxkplan/vendor/plugins/datatables/media/js/dataTables.bootstrap.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block javascripts_custom %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/aircorsicaxkplan/assets/js/custom_datatables.js') }}"></script>
{% endblock %}