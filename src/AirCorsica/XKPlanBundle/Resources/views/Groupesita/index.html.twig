{% extends 'AirCorsicaXKPlanBundle::layout.html.twig' %}

{% block stylesheets %}

    {% stylesheets
    filter='cssrewrite'
    'bundles/aircorsicaxkplan/assets/admin-tools/admin-forms/less/admin-forms.less'
    filter='less'
    %}

    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />

    {% endstylesheets %}
{% endblock %}

{% block title %}
    {% set titre = 'Contacts SITA' %}
    {{ titre }} - {{ parent() }}
{% endblock %}

{% block body_class %}
    {% set attributes = 'admin-elements-page' %}
    {{ attributes }}
{% endblock %}

{% block titre_contenu %}
    {% set titre_contenu = 'Contacts SITA' %}
    {{ titre_contenu }}
{% endblock %}

{% block btn_actions %}
    <div class="topbar-right">
        <div class="ib topbar-dropdown">
            <a id="add-group-sita" href="{{ path('groupesita_new') }}" class="btn btn-success btn-gradient dark btn-block"><i class="glyphicon glyphicon-plus"></i> Ajouter Groupe SITA</a>
        </div>
    </div>
{% endblock %}

{% block body %}
    <!-- Begin: Content -->
    <div id="content" class="animated fadeIn">
        <div class="row">
            <!-- Begin: Content -->
            <div class="col-md-12">
                <div class="panel">

                    <div class="panel-heading">
                        <span class="panel-icon">
                            <i class="glyphicon glyphicon-list"></i>
                        </span>
                        <span class="panel-title">Groupes & Contacts SITA</span>

                        <div class="panel-controls">
                            <div class="pull-right">
                                <a id="exportGroupesSITAToCsv" href="{{ path('groupesita_csv') }}" class="btn btn-default" role="button">CSV</a>
                                <a id="expandAll" href="#" class="btn btn-default" role="button">Ouvrir Tout</a>
                                <a id="collapseAll" href="#" class="btn btn-default" role="button">Fermer Tout</a>
                            </div>
                        </div>
                    </div>

                    <div class="panel-body">
                        {% for groupe in groupeSITAs %}
                            {% include "AirCorsicaXKPlanBundle:Groupesita:details.html.twig" %}
                        {% endfor %}
                    </div>
                </div>
            </div>


        </div>
    </div>

    <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" id="modal-add-groupe-sita">
        <div class="modal-dialog modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body" id="modal-body-add-groupe-sita">

                </div>

            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

{% endblock %}

{% block javascripts_libs %}

{% endblock %}

{% block jquery_custom %}

{% endblock %}

{% block javascripts_custom %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/aircorsicaxkplan/assets/js/groupesita.js') }}"></script>
{% endblock %}
