                                            {%  set GMT = request.query.get("GMT") %}
                                            <select id="GMT" class="select2-single form-control" data-placeholder="GMT" name="GMT">
                                                {%  for i in -12..13 %}
                                                    {% if i > 0 %}
                                                        <option {% if GMT==i %} selected="selected" {% endif %}value="{{ i }}">GMT+{{ i }}</option>
                                                    {% elseif i==0 %}
                                                        <option {% if GMT==i %} selected="selected" {% endif %}value="{{ i }}">GMT</option>
                                                    {% else %}
                                                        <option {% if GMT==i %} selected="selected" {% endif %}value="{{ i }}">GMT{{ i }}</option>
                                                    {% endif %}
