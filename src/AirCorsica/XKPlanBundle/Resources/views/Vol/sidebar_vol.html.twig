                </span>
                <span class="panel-title">Filtres</span>
            </div>

            <div class="panel-body">

                {% if request.attributes.get('_route') == 'vol_timetable' and is_granted('ROLE_ADMIN') %}

                    <div class="panel-group accordion" id="accordion0">

                        <div class="panel panel-primary panel-border top">

                            <div class="panel-heading">
                                <a class="accordion-toggle accordion-icon link-unstyled" data-toggle="collapse" data-parent="#accordion0" href="#accord0">
                                    Timetable :
                                </a>
                            </div>

                            <div id="accord0" class="panel-collapse collapse in" style="height: auto;">

                                <div class="panel-body" style="margin: 20px 0; padding: 0;">

                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <div class="bs-component">
                                                <div class="checkbox-custom mb5">
                                                    {%  set format = request.query.get("format") %}
                                                    <input {%  if format == "num" %}checked="checked"{% endif %} id="dateNum" type="checkbox" value="num" name="format"/>
                                                    <label for="dateNum">Dates au format numérique</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <div class="bs-component">
                                                <div class="checkbox-custom mb5">
                                                    {%  set fusionnerPeriode = request.query.get("fusionnerPeriode") %}
                                                    <input {%  if fusionnerPeriode == 1 %}checked="checked"{% endif %} id="fusionnerPeriode" type="checkbox" name="fusionnerPeriode" value="1"/>
                                                    <label for="fusionnerPeriode">Fusionner périodes compatibles</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="GMT" class="col-md-3 control-label">GMT :</label>
