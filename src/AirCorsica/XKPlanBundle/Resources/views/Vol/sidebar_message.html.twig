<div class="theme-primary col-md-3" id="sidebar_message">
    <div class="panel">
        <form class="form-horizontal" role="form" action="" method="get">
            <div class="panel-body ptn">
                <div class="row tray-bin">
                    <div class="col-md-12">
                        <p class="text-center text-primary">
                            Gestion des Messages<br /><img src="{{ asset('bundles/aircorsicaxkplan/assets/img/sita.png') }}" title="Messagrie SITA" alt="Messagrie SITA" class="mw150"  />
                        </p>
                    </div>
                </div>

                {% set template_id = app.request.session.get("template") %}
                <div class="form-group">
                    <label class="col-md-5 control-label">Template Actif :</label>
                    <div class="col-md-7">
                        <div class="bs-component">
                            <p class="form-control-static text-muted">{{ render(controller('AirCorsicaXKPlanBundle:Template:displayTemplateName', { 'id': template_id })) }}</p>
                        </div>
                    </div>
                </div>

                {#<hr class="short alt">#}

                {#<div class="form-group">#}
                    {#<label class="col-md-12">Type de message à expédier :</label>#}
                {#</div>#}

                {#<div class="form-group">#}
                    {#<div class="col-md-12">#}
                        {#<div class="radio-custom mb5">#}
