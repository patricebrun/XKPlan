{% extends 'AirCorsicaXKPlanBundle::layout.html.twig' %}

{% block stylesheets %}
    {% stylesheets
    filter='cssrewrite'
    'bundles/aircorsicaxkplan/assets/admin-tools/admin-forms/less/admin-forms.less'
    filter='less'
    output='css/compiled/admin-forms.css'
    %}

    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />

    {% endstylesheets %}
    {% stylesheets
    filter='cssrewrite'
    'bundles/aircorsicaxkplan/vendor/plugins/colorpicker/css/bootstrap-colorpicker.min.css'
    output='css/compiled/colorpicker.css'
    %}

    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />

    {% endstylesheets %}
{% endblock %}

{% block title %}
    {% set titre = 'Type Vol' %}
    {{ titre }} - {{ parent() }}
{% endblock %}

{% block body_class %}
    {% set attributes = 'admin-elements-page' %}
    {{ attributes }}
{% endblock %}

{% block titre_contenu %}
    {% set titre_contenu = 'Type Vol' %}
    {{ titre_contenu }}
{% endblock %}

{% block btn_actions %}
    <div class="topbar-right">
        <div class="ib topbar-dropdown">
            <a href="{{ path('typedevol_index') }}" class="btn btn-success btn-gradient dark btn-block"><i class="glyphicon glyphicon-circle-arrow-left"></i> Retour</a>
        </div>
    </div>
{% endblock %}

{% block body %}

    {#{ dump(edit_form) }#}
    <!-- Begin: Content -->
    <div id="content" class="animated fadeIn">
        <div class="row">

            <div class="theme-primary mw1000 center-block">
                <div class="form-horizontal">
                    <!-- Input Fields -->
                    <div class="panel">
                        <div class="panel-heading">
                            <span class="panel-icon">
                              <i class="glyphicon glyphicon-edit"></i>
                            </span>
                            <span class="panel-title">Consultation Type Vol</span>
                        </div>
                        <div class="panel-body">
                            <div class="form-group">
                                <label class="col-lg-3 control-label">Id</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="typeDeVol_id" name="typeDeVol_id" class="form-control" value="{{ typeDeVol.id }}" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-3 control-label">Nom</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="typeDeVol_nom" name="typeDeVol_nom" class="form-control" value="{{ typeDeVol.nom }}" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-3 control-label">Code Type</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="typeDeVol_codeType" name="typeDeVol_codeType" class="form-control" value="{{ typeDeVol.codeType }}" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-3 control-label">Code Service</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="typeDeVol_codeService" name="typeDeVol_codeService" class="form-control" value="{{ typeDeVol.codeService }}" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-3 control-label">Code Couleur</label>
                                <div class="col-lg-8">
                                    <div class="input-group colorpicker-component color-picker cursor-button">
                                        <span class="input-group-addon cursor-button">
                                          <i class="cursor-button"></i>
                                        </span>
                                        <input type="text" id="typeDeVol_codeCouleur" name="typeDeVol_codeCouleur" value="{{ typeDeVol.codeCouleur }}" class="form-control" disabled />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-3 control-label">Date modification</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="typeDeVol_dateTimeModification" name="typeDeVol_dateTimeModification" class="form-control" value="{% if typeDeVol.dateTimeModification %}{{ typeDeVol.dateTimeModification|date('Y-m-d H:i:s') }}{% endif %}" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-3 control-label">Date cr√©ation</label>
                                <div class="col-lg-8">
                                    <div class="bs-component">
                                        <input type="text" id="typeDeVol_dateTimeCreation" name="typeDeVol_dateTimeCreation" class="form-control" value="{% if typeDeVol.dateTimeCreation %}{{ typeDeVol.dateTimeCreation|date('Y-m-d H:i:s') }}{% endif %}" disabled>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End: Content -->
{% endblock %}


{% block javascripts_libs %}
    <!-- BS Colorpicker Plugin -->
    <script type="text/javascript" src="{{ asset('bundles/aircorsicaxkplan/vendor/plugins/colorpicker/js/bootstrap-colorpicker.min.js') }}"></script>
{% endblock %}

{% block jquery_custom %}
    // Init Color Picker
    $(".color-picker").colorpicker();
{% endblock %}

